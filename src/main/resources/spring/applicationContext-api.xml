<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:context="http://www.springframework.org/schema/context"
				xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
				http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">
	<!-- API beans -->
	<bean class="net.thewaffleshop.passwd.api.AccountAPI"/>
	<bean class="net.thewaffleshop.passwd.api.EncryptionAPI"/>
	<bean class="net.thewaffleshop.passwd.api.SecretAPI"/>
	<!-- service beans -->
	<bean class="net.thewaffleshop.passwd.service.AccountService"/>
	<bean class="net.thewaffleshop.passwd.service.SecretService"/>

	<bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor"/>

	<!-- use bcrypt to encode passwords -->
	<bean id="passwordEncoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder"/>
</beans>
